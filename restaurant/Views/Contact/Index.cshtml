@{
    ViewData["Title"] = "Contact";
    ViewData["Contact"] = "active";
}
<div class="contact">
    <div class="landing contact-landing">
        <div class="intro-text">
            <h2 class="title">Contact Us</h2>
            <div class="links">
                <a asp-controller="Home" asp-action="index" class="home link"> Home / </a>
                <a asp-controller="AboutUs" asp-action="index" class="contact link"> contact </a>
            </div>
        </div>
    </div>
    <div class="content">
        <h2 class="main-title">Our <span> contact </span></h2>
        <div class="container">
            <div class="row contact-information ">
                <div class="col-md-6 col-lg-3">
                    <div class="contact-info">
                        <div class="contact-icon">
                            <i class="fas fa-map-marker-alt" style="color:white;"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Address</h3>
                            <p>123 Street, NY, USA</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="contact-info">
                        <div class="contact-icon">
                            <i class="fas fa-phone-alt" style="color:white"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Call Us</h3>
                            <p>+012 345 6789</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="contact-info">
                        <div class="contact-icon">
                            <i class="fas fa-envelope" style="color:white;"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Email Us</h3>
                            <p>info@example.com </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="contact-info">
                        <div class="contact-icon">
                            <i class="fas fa-share" style="color:white;"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Follow Us</h3>
                            <div class="contact-social-icon">
                                <i class="fab fa-twitter"></i>
                                <i class="fab fa-facebook"></i>
                                <i class="fab fa-youtube"></i>
                                <i class="fab fa-linkedin-in"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row contact-form">
                <div class="col-md-6">
                    <div class="map">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1600663868074!5m2!1sen!2sbd" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    </div>
                </div>
                <div class="col-md-6">
                    <form>
                        <div class="control-group">
                            <input type="text" placeholder="Your Name" class="form-control" required>
                            <p class="block-line"></p>
                        </div>
                        <div class="control-group">
                            <input type="email" placeholder="Your Email" class="form-control" required>
                            <p class="block-line"></p>
                        </div>
                        <div class="control-group">
                            <input type="text" placeholder="subject" class="form-control" required>
                            <p class="block-line"></p>
                        </div>
                        <div class="control-group">
                            <textarea class="form-control" placeholder="Message">Message</textarea>
                            <p class="block-line"></p>
                        </div>
                        <div class="button">
                            <a href="#" class="btn custom-button"> Send Message</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
