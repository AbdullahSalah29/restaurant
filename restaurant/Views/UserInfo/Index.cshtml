@model restaurant.Models.ViewUserOrdersTabel
@{
    ViewData["Title"] = "Profile";
}
<form>
    <br />
    <img src="~/imgs/@Model.User.img" width="300" height="300" />
    <br />
    <br />
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" value="@Model.User.name" @ViewData["no"] class="form-control" id="inputName1">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" value="@Model.User.email" @ViewData["no"] class="form-control" id="inputEmail2">
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" value="******" @ViewData["no"] class="form-control" id="inputPassword3">
        </div>
    </div>
</form>
<div class="menu">
    <div class="content">
        <div class="container">
            <div class="row burger-box">
                <h2 class="title burger-title"> Orders</h2>
                @foreach (var item in Model.Order)
                {
                    @if (item.payment == true)
                    {
                        <div class="col-md-6 col-lg-4" id="@item.order_ID">
                            <div class="menu-box">
                                <h3>@Html.DisplayFor(modelItem => item.order_ID) </h3>
                                <p> @Html.DisplayFor(modelItem => item.DateTime)</p>
                                <p> @Html.DisplayFor(modelItem => item.address)</p>
                                @foreach (var i in Model.Food)
                                {
                                    foreach (var ord in i)
                                    {
                                        <div class="price">
                                            
                                            <p>  @Html.DisplayFor(modelItem => item.price) $</p>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                       
                    }
                }
                <br>
                <h2 class="title burger-title"> Tabels</h2>
                <br>
                @foreach (var item in Model.Tabel)
                {
                      <div class="col-md-6 col-lg-4" id="@item.Id">
                            <div class="menu-box">
                                <h3>@Html.DisplayFor(modelItem => item.Id) </h3>
                                <p> @Html.DisplayFor(modelItem => item.Date)</p>
                                <p> @Html.DisplayFor(modelItem => item.Time.TimeOfDay)</p>
                                <p> @Html.DisplayFor(modelItem => item.KindOfFood)</p>
                            <p> @Html.DisplayFor(modelItem => item.Mobile)</p>


                               
                            </div>
                        </div>               
                }
            </div>
        </div>
    </div>
</div>
