@{
    ViewData["Title"] = "Register";
    ViewData["Register"] = "active";
}

<div class="login">
    <h2 class="text-center">log in</h2>
    <div class="box text-center">
        <div class="logo"><i class="fas fa-utensils"></i></div>
        @if (ViewBag.Message != null)
        {
            <span style="color:orangered">@Html.Raw(ViewBag.Message)</span>
            <br />
            
        }
        <form class="d-flex flex-column" method="post" action="Login">
            <input class="mb-10" type="email" id="userName" name="userName" placeholder="Email">
            <input class="mt-10" type="Password" name="Password" placeholder="Password">
            <input type="submit" class="btn"value="log in">
        </form>
        <div class="info"> Forget an password ? <a asp-action="Index" class="link">Sign Up</a></div>
        <div class="icons">
            <span> or you can sign in with </span>
            <a href="https://www.google.com"><i class="fab fa-google"></i></a>
            <a href="https://wwww.github.com"><i class="fab fa-github"></i></a>
            <a href="https://wwww.facebook.com"><i class="fab fa-facebook"></i></a>
        </div>
    </div>
</div>