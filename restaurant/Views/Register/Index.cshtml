@{
    ViewData["Title"] = "Register";
    ViewData["Register"] = "active";
}
<div class="login">
    <h2 class="text-center"> Sign Up </h2>
    <div class="box text-center">
        <div class="logo"><i class="fas fa-utensils"></i></div>
        @if(ViewBag.error==false){<font color="red" size="2.5">@foreach(var item in ViewBag.errors){<p>@item</p>}</font>}
        <form class="d-flex flex-column" id="myForm" asp-action="Index" asp-controller="Register" method="post" enctype="multipart/form-data" >
           
            <input type="text" id="userName" name="name" value="@Model.name"  placeholder="UserName">
            <input type="password" name="Password" value="@Model.Password"  placeholder="Password">
            <input type="password" name="repass" placeholder="Confirm Password">
            <input type="email" name="email" value="@Model.email"  placeholder="E-mail address">
            <div  class="text-danger"></div>
            <div class="form-group">
                <input class="form-control" type="file" name="img_file" value="@Model.img" onchange="handleFileSelection(event)"  />
                <span  class="text-danger"></span>
            </div>
            <input type="submit" value="Submit" class="btn"  />
        </form>
        <div class="info"> Have an account ? <a asp-action="Login" class="link">log in</a></div>
        <div class="icons">
            <span> or you can sign in with </span>
            <a href="https://www.google.com"><i class="fab fa-google"></i></a>
            <a href="https://wwww.github.com"><i class="fab fa-github"></i></a>
            <a href="https://wwww.facebook.com"><i class="fab fa-facebook"></i></a>
        </div>
    </div>
</div>
<script>
    function validateForm(event) {
        // Prevent the default form submission
        alert("hi");
        event.preventDefault();
        
        // Get the form and field values
        var form = document.getElementById('myForm');
        
        var confirmPassword = document.getElementById('re-password').value;

        // Perform form validation
        
            // Display an error message or perform any necessary actions
            @TempData["repass"]=confirmPassword;
            return;
       

        // If form is valid, submit the form
        form.submit();
    }

</script>